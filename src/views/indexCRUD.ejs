<!DOCTYPE html>
<html lang="en">
<!-- Head -->
<%- include('./partials/head.ejs') %>

  <body>
    <!-- Header -->
    <%- include('./partials/header.ejs') %>
      <main class="main">
        <div class="box">
          <div class="container-1">
            <span class="icon"><i class="fa fa-search fa-2x"></i></span>
            <input type="search" id="search" placeholder="Buscador..." />
          </div>
        </div>
        <% if(typeof alert !='undefined' ) { %>
          <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <%= alert %>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
              </button>
          </div>
          <% } %>
            <article>
              <div id="coverflow">
                <ul class="flip-items">
                  <% producto.forEach(comic=>{ %>
                    <li data-flip-title="<%= comic.volumen %>" data-flip-category="<%= comic.temporada %>">
                      <a href="/products/productDetailcrud/<%= comic.id %>"><img src="/images/img/<%= comic.imagen %>"
                          aria-label="eComic" /></a>
                    </li>
                    <%})%>
                </ul>
              </div>
              <script>
                var coverflow = $("#coverflow").flipster({
                  buttons: true,
                  buttonNext: "Siguiente",
                  buttonPrev: "Previo",
                  start: "center",
                  fadeIn: 500,
                  autoplay: 10000,
                  click: true,
                  loop: true,
                  nav: true,
                  style: "coverflow",
                });
              </script>
            </article>
            <div class="row">
              <% producto.forEach(comic=>{ %>
                <div class="card">
                  <div class="card-header">
                    <h1>
                      <%= comic.titulo %>
                    </h1>
                    <h6>
                      <%= comic.precio %>
                    </h6>
                  </div>
                  <div class="card-body">
                    <a href="/products/productDetailcrud/<%= comic.id %>"><img src="/images/img/<%= comic.imagen %>"
                        aria-label="drawing of a cat" /></a>
                    <p>
                      <%= comic.descripcioncorta %>
                    </p>
                    <a href="/products/productCart/" class="btn"><i class="fa-solid fa-cart-plus"></i> Añadir</a>
                  </div>
                </div>
                <%})%>
            </div>
      </main>
      <script type="text/javascript" src="/js/search2.js"></script>
      <!-- Footer -->
      <%- include('./partials/footer.ejs') %>
  </body>

</html>