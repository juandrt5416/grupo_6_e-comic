<!DOCTYPE html>
<html lang="en">
  <!-- Head -->
  <%- include('../partials/head.ejs') %>
  <body class="product_detail">
    <!-- Header -->
    <%- include('../partials/header.ejs') %>
    <main class="main">
      <div class="box">
        <div class="container-1">
          <span class="icon"><i class="fa fa-search fa-2x"></i></span>
          <input type="search" id="search" placeholder="Buscador..." />
        </div>
      </div>
      <div class="card-wrapper">
        <div class="card-header">
          <h1>
            Información del producto
          </h1>
        </div>
      </div>
      <div class="card-wrapper">
        <div class="card-dtls">
          <!-- card left -->
          <div class="product-imgs">
            <div class="img-display">
              <div class="img-showcase">
                <img
                  src="/images/img/<%= productoCrud.imagen %>"
                  alt="<%= productoCrud.id %>"
                />
              </div>
            </div>
          </div>
          <!-- card right -->
          <div class="product-content">
            <div class="card-header-title">
                <h2 class="product-title"><%= productoCrud.titulo %></h2>
            </div>
            <div class="product-detail">
              <h2>Breve descripción:</h2>
              <p><%= productoCrud.descripcioncorta %></p>
              <h2>Descripción detallada:</h2>
              <p><%= productoCrud.descripciondetallada %></p>
              <h2>Mas detalles:</h2>
              <ul>
                <li>Autor: <span> <%= promAutor.personas.nombrecompleto %> </span></li>
                <li>
                  Ilustrador: <span> <%= promIllustrador.personas.nombrecompleto %> </span>
                </li>
                <li>
                  Categoría: <span> <%= productoCrud.categorias.nombrecategoria %> </span>
                </li>
                <li>
                  Fecha de la publicación: <span> <%= productoCrud.publicacion %> </span>
                </li>
                <li>País origen: <span> <%= productoCrud.paisproductos.nombre %> </span></li>
              </ul>
            </div>
            <div class="product-price">
              <h2>Precio:</h2>
              <p class="last-price">
                Normal: <span><%= productoCrud.precio %></span>
              </p>
              <p class="new-price">
                Con descuento (15%):
                <span><%=
                  Number(productoCrud.precio)-(Number(productoCrud.precio)*(15/100))
                  %> </span
                >
              </p>
            </div>
            <div class="edit-delete" action="">
              <div class="ml-auto">
                <a
                  href="/products/productEditcrud/<%= productoCrud.id %>"
                  class="text-uppercase"
                  >Editar</a
                >
              </div>
              <div class="ml-auto">
                <a
                  href="/products/productDeletecrud/<%= productoCrud.id %>"
                  class="text-uppercase"
                  >Borrar
                </a>
              </div>
            </div>
            <div class="purchase-info">
              <input type="number" min="0" value="1" />
                  <a href="/products/productCart/" class="btn"><i class="fa-solid fa-cart-plus"></i> Añadir al carrito</a>
            </div>
          </div>
        </div>
      </div>
    </main>
    <script type="text/javascript" src="/js/search2.js"></script>
    <!-- Footer -->
    <%- include('../partials/footer.ejs') %>
    <!-- <script src="static/dist/script.js"></script>-->
  </body>
</html>
